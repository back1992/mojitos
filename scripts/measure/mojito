. ~/.bashrc
nvm use 0.8
./bin/mojito start -r ./measure/mojito &

sleep 5

ab -n 1000 -c 100 -r "http://127.0.0.1:3000/@simple/index?foo=bar&baz=qux" > ./measure/mojito/lastrun.txt

sleep 5

ab -n 1000 -c 100 -r "http://127.0.0.1:3000/@simple/index?foo=bar&baz=qux" > ./measure/mojito/lastrun.txt

sleep 5

declare -a pids
pids=`ps aguwx | grep [n]ode | awk '{print $2}' | xargs`
for thisPid in "${pids[@]:0}"
do
	printf "killing $thisPid \n"
	kill -9 $thisPid
done;